{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <h1>Hello {{ controller_name }}! âœ…</h1>

    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for article in articles %}
                    <div class="col">
                        <div class="card shadow-sm" style="height: 100%;">
                            {% for image in images[article.idArticle] %}
                                <img src="{{ asset('uploads/' ~ image.nomImage) }}" alt="Image de l'article"">
                            {% endfor %}
                            <div class="card-body">
                                <p class="card-text">
                                    <h1>{{ article.titreArticle|upper }}</h1>
                                    {{ article.contenuArticle|slice(0,70)|raw }}...
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('app_view_article', {'id': article.idArticle}) }}">Voir</a>
                                    </div>
                                    {{ article.idSousCategorie.nomSousCategorie }}
                                    <small class="text-body-secondary">{{ article.dateCreation|date("d/m/Y") }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% include "commun/footer.html.twig" %}
{% endblock %}
